<%= simple_form_for [:backend, current_object] do |f| %>
  <%= f.input :name %>
  <%= f.input :title%>
  <%= f.input :dom_id, label: '講者在頁面的 ID'%>
  <%= f.input :avatar, as: :file%>
  <%= f.input :twitter%>
  <%= f.input :github%>
  <%= f.input :home_page%>
  <%= f.input :biography %>
  <%= f.input :subject %>
  <%= f.input :abstract %>
  <%= f.input :english, as: :radio_buttons, collection: [[:English, true], [:Chinese, false]], label: 'Language'%>
  <%= f.input :lt_speaker, as: :radio_buttons, collection: [[:Yes, true], [:No, false]], label: 'LT Speaker'%>
  <%= f.submit class: "btn btn-success"%>
  <%= link_to "返回列表" ,backend_speakers_path ,class:'btn btn-primary' %>
<% end %>
